<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Turnier.JoinTurnierFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:layout_gravity="center">
            <EditText
                android:id="@+id/etGetCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="Lobby Code eingeben"/>

           <de.pbma.moa.airhockey.CustomButton
                android:id="@+id/btnScanQrTurnier"
                android:layout_width="wrap_content"
                android:background="@drawable/button_pixel"
                android:layout_height="wrap_content"
                android:text="Scan QR" />

        </LinearLayout>

        <de.pbma.moa.airhockey.CustomButton
            android:id="@+id/btnConfirmTournamentCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_pixel_confirm"
            android:text="BestÃ¤tigen" />

    </LinearLayout>
</FrameLayout>
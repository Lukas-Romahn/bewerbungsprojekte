<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/button_pixel.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Hintergrundfarbe -->
    <solid android:color="@color/Neongruen" />

    <!-- Pixeliger Rand -->
    <stroke
        android:color="#FFFFFF"
        android:width="5dp" />

    <!-- Abgerundete Ecken, um das Pixel-Design zu betonen -->
    <corners android:radius="4dp" />
    <gradient
        android:startColor="@color/Neongruen"
        android:endColor="@color/Neonblau"
        android:angle="270"/>
</shape>


<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xmlns="http://xmlns.jcp.org/xml/ns/javaee"
		 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" 
		 id="WebApp_ID" version="4.0">

<listener>
	<listener-class>utils.SystemStartup</listener-class>
</listener>

<servlet>
    <servlet-name>QuartzInitializer</servlet-name> 
    <servlet-class>utils.QuartzInitializerServlet</servlet-class> 
    <load-on-startup>1</load-on-startup> 
  </servlet>

<servlet>
    <servlet-name>LogViewer</servlet-name>
    <servlet-class>controller.LogViewer</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>LogViewer</servlet-name>
    <url-pattern>/log-viewer</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>LogFileList</servlet-name>
    <servlet-class>controller.LogFileList</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>LogFileList</servlet-name>
    <url-pattern>/logs</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>ImageServlet</servlet-name>
    <servlet-class>controller.ImageServlet</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>ImageServlet</servlet-name>
    <url-pattern>/bilder/*</url-pattern>
</servlet-mapping>


<display-name>Archetype Created Web Application</display-name>

  <resource-ref>
    <description>PostgreSQL DataSource</description>
    <res-ref-name>jdbc/waiDB</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
</resource-ref>

</web-app>
